<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<HBox fx:id="pantalla" alignment="CENTER" spacing="100"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="servicios.ControladorMesas"
      stylesheets="@styles.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Panel Izquierdo -->
    <VBox alignment="CENTER_LEFT" spacing="20">

        <ImageView fitWidth="300" fitHeight="300" preserveRatio="true">
            <image>
                <Image url="@logo.png"/>
            </image>
        </ImageView>

        <Label text="MESAS" textFill="white" style="-fx-font-size: 80px; -fx-font-weight: bold;"/>

        <HBox spacing="30" alignment="CENTER_LEFT">
            <Label text="      " style="-fx-background-color: #1C8477; -fx-background-radius: 5;
            -fx-border-radius: 5; -fx-font-size: 30px;
            -fx-effect: dropshadow( gaussian , rgba(0,0,0,0.7) , 8, 0.5 , 3 , 3 );"/>
            <Label text="Disponible" textFill="white" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>
        </HBox>

        <HBox spacing="30" alignment="CENTER_LEFT">
            <Label text="      " style="-fx-background-color: #ff4d4d; -fx-background-radius: 5;
            -fx-border-radius: 5; -fx-font-size: 30px;
            -fx-effect: dropshadow( gaussian , rgba(0,0,0,0.7) , 8, 0.5 , 3 , 3 );"/>
            <Label text="Ocupada" textFill="white" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>
        </HBox>

    </VBox>


    <!-- Panel de las Mesas -->
    <VBox alignment="CENTER_RIGHT" spacing="20">

        <Button fx:id="actualizar" onAction="#actualizarMesas" text="Actualizar" />
        <!--  MESA 1  -->
        <HBox fx:id="mesa1" alignment="CENTER_LEFT"/>

        <!--  MESA 2  -->
        <HBox fx:id="mesa2" alignment="CENTER_LEFT"/>

        <!--  MESA 3  -->
        <HBox fx:id="mesa3" alignment="CENTER_LEFT"/>

        <!--  MESA 4  -->
        <HBox fx:id="mesa4" alignment="CENTER_LEFT"/>

        <!-- Mesa 5-->
        <HBox fx:id="mesa5" alignment="CENTER_LEFT"/>

    </VBox>
</HBox>
