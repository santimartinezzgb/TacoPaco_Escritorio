                     -fx-padding: 0 0 0 50; -fx-pref-width: 900; -fx-pref-height: 150;
                     -fx-font-size: 60; -fx-font-weight: bold;">

            <Label text="Mesa 3" textFill="white"/>

            <Label fx:id="precio_mesa3" textFill="white" text="" visible="false"/>

            <Button fx:id="btnCobrar3" text="Cobrar"
                    style="-fx-background-color: #3074C2; -fx-text-fill: white;
                           -fx-background-radius: 10px; -fx-border-radius: 10px;"
                    visible="false"/>
        </HBox>


        <!-- ============ MESA 4 ============= -->
