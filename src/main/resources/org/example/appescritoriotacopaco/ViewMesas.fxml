<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<HBox fx:id="pantalla" alignment="CENTER" spacing="100"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="servicios.ControladorMesas"
      stylesheets="@styles.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Panel Izquierdo -->
    <VBox alignment="CENTER" spacing="20">

        <ImageView fitWidth="300" fitHeight="300" preserveRatio="true">
            <image>
                <Image url="@logo.png"/>
            </image>
        </ImageView>

        <Label text="MESAS" textFill="white" style="-fx-font-size: 40px;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="      " style="-fx-background-color: #1C8477;"/>
            <Label text="Disponible" textFill="white"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="      " style="-fx-background-color: red;"/>
            <Label text="Ocupada" textFill="white"/>
        </HBox>

    </VBox>


    <!-- Panel de las Mesas -->
    <VBox alignment="CENTER" spacing="20">

        <!-- ============ MESA 1 ============= -->
        <HBox fx:id="mesa1" alignment="CENTER" spacing="140"
              style="-fx-background-color: #1C8477; -fx-background-radius: 10;
                     -fx-padding: 0 0 0 50; -fx-pref-width: 900; -fx-pref-height: 150;
                     -fx-font-size: 60; -fx-font-weight: bold;">

            <Label text="Mesa 1" textFill="white"
                    style="-fx-font-size: 30;"/>

            <Label fx:id="precio_mesa1" textFill="white" text="" visible="false"/>

            <Button fx:id="btnCobrar1" text="Cobrar"
                    style="-fx-background-color: #3074C2; -fx-text-fill: white;
                           -fx-background-radius: 10px; -fx-border-radius: 10px;"
                    visible="false"/>
        </HBox>


        <!-- ============ MESA 2 ============= -->
        <HBox fx:id="mesa2" alignment="CENTER" spacing="140"
              style="-fx-background-color: #1C8477; -fx-background-radius: 10;
                     -fx-padding: 0 0 0 50; -fx-pref-width: 900; -fx-pref-height: 150;
                     -fx-font-size: 60; -fx-font-weight: bold;">

            <Label text="Mesa 2" textFill="white"/>

            <Label fx:id="precio_mesa2" textFill="white" text="" visible="false"/>

            <Button fx:id="btnCobrar2" text="Cobrar"
