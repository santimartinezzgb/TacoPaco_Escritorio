<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox fx:id="pantalla" alignment="CENTER" spacing="100" xmlns:fx="http://javafx.com/fxml"
      fx:controller="servicios.ControladorMesas" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="20">
        <ImageView fitWidth="300" fitHeight="300" preserveRatio="true">
            <image>
                <Image url="@logo.png" />
            </image>
        </ImageView>
        <Label fx:id="mesas" text="MESAS" textFill="white"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="      " style="-fx-background-color: #1C8477;"/>
            <Label fx:id="disponible" text="Disponible" textFill="white"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="      " style="-fx-background-color: red;"/>
            <Label fx:id="ocupada" text="Ocupada" textFill="white"/>
        </HBox>
    </VBox>

    <VBox alignment="CENTER" spacing="20">
        <HBox fx:id="mesa1" alignment="CENTER_LEFT">
            <Label textFill="white" text="Mesa 1"/>
        </HBox>
        <HBox fx:id="mesa2" alignment="CENTER_LEFT">
            <Label textFill="white" text="Mesa 2"/>
        </HBox>
        <HBox fx:id="mesa3" alignment="CENTER_LEFT">
            <Label textFill="white" text="Mesa 3"/>
        </HBox>
        <HBox fx:id="mesa4" alignment="CENTER_LEFT">
            <Label textFill="white" text="Mesa 4"/>
        </HBox>
        <HBox fx:id="mesa5" alignment="CENTER_LEFT">
            <Label textFill="white" text="Mesa 5"/>
        </HBox>
    </VBox>


</HBox>
